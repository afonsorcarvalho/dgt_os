<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crs_a4" model="report.paperformat">
            <field name="name">CRSA4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">30</field>
            <field name="dpi">120</field>
        </record>


        <!-- QWeb Reports -->
        <report 
            id="ordem_servico_report"
            model="dgt_os.os"
            string="Ordem de Serviço"
            report_type="qweb-pdf"
            paperformat="crs_a4"
            name="dgt_os.report_ordem_servico"
            file="report_ordem_servico"
            print_report_name = "(object.name)"
            attachment="(object.name + '.pdf')"
        />

		<report 
            id="orcamento_servico_report"
            model="dgt_os.os"
            string="Orçamento de Serviço"
            report_type="qweb-pdf"
            name="dgt_os.report_orcamento_servico"
            file="report_orcamento_servico"
            print_report_name = "('Orçamento ' + object.name)"
        />

       
    </data>
</odoo>

